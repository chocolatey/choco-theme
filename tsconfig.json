{
    "allowImportingTsExtensions": true,
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "lib": [
            "ES2021.String"
        ],
        "paths": {
            "@choco-core/*": ["./packages/core/src/scripts/*"],
            "@choco-theme/*": ["./src/scripts/*"]
        }
    }
}
